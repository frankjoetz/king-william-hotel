        <Label x:Name="lblEmployeeID" Content="Employee ID:"  HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="323,201,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtEmployeeID" HorizontalAlignment="Left" Height="23" Margin="574,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="401"/>
        <Label x:Name="lblEmployeeInformation" Content="Employee Information" HorizontalAlignment="Left" Margin="170,119,0,0" VerticalAlignment="Top" FontSize="48" FontWeight="Bold"/>
        <Button x:Name="btnView" Content="View Information" HorizontalAlignment="Left" Margin="455,284,0,0" VerticalAlignment="Top" Width="159" Height="48" Background="#FF9A6836" FontSize="18" Foreground="#FFF1F1F1" Click="btnView_Click" IsDefault="True"/>
